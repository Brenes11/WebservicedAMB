<?php
include_once("../conexion.php");

Class usuarios extends Conexion{
    public function getUsers(){

        $sql = "SELECT * FROM usuarios ";

        $rs = $this->consultaSQL($sql);

        return $rs;
    }

    public function insertarUsuario($username, $password, $rol){
        $sql = "INSERT INTO usuarios(username, pass, rol) VALUES ('$username', '$password', '$rol')";
        $rs = $this->consultaSQL($sql);
        return $rs;
    }

    public function loguearse($username, $password){
        
        $sql = "SELECT * FROM usuarios WHERE username = '$username' AND pass = '$password'";
        $rs = mysqli_query($this->link ,$sql);
        if(mysqli_num_rows($rs)==1){
            return $rs;
        }
    }
}
?>